server:
  addr: ":8080"
  # debug | release | test
  gin_mode: "debug"

logger:
  path: "./logs/minichat.log"
  level: "debug"
  max_size: 100
  max_backups: 7
  max_age: 30
  compress: false
  to_stdout: true

db:
  # 目前项目内置 OpenForDev() 走 sqlite，这里先把 dsn 留给后续扩展
  driver: "sqlite"
  dsn: "minichat.db"

jwt:
  # 生产环境请用环境变量覆盖 MINICHAT_JWT_SECRET
  secret: "minichat-dev-secret-change-me"
  access_ttl_minutes: 120
  refresh_ttl_hours: 168

